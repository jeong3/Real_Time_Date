package Bank_Model;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

public class AccountDAO {
	String jdbcURL;
	String jdbcDriver;
	Connection con;
	PreparedStatement pstmt;
	ResultSet rs;
	String sql;

	public AccountDAO() {
		jdbcURL = "jdbc:oracle:thin:@localhost:1521:xe";
		jdbcDriver = "oracle.jdbc.driver.OracleDriver";
	}

	public Connection getConnection() {
		Connection conn = null;
		try { // 예외 처리 : 에러가 생겼을 때 사용자가 오류를 볼 수 없도록, 프로그램이 종료가 되지 않도록 하기 위해서
			Class.forName(jdbcDriver); // DB 접속
			conn = DriverManager.getConnection(jdbcURL, "miso", "1234");
		} catch (Exception e) {
			e.printStackTrace(); // 프로그램이 종료되지 않은 상태에서 관리자가 오류메세지를 확인하기 위함
		}
		return conn;
	}

	public void accountInsert(AccountDTO dto) {
		con = getConnection();
		sql = " insert into account(accountno, owner, balance)" + " values(?,?,?)";
		try {
			pstmt = con.prepareStatement(sql);
		} catch (Exception e) {
			e.printStackTrace();
		}

	}

}
