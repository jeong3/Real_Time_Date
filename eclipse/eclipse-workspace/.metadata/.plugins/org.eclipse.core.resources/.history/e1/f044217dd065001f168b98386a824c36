package Bank_View;

import java.util.Scanner;

import Bank.Request;
import Bank_Model.AccountDTO;

public class AccountDepositView {
	Scanner scanner = new Scanner(System.in);
	public void view(AccountDTO dto) {
		System.out.println(dto.getAccountNo() + "\t");
		System.out.println(dto.getOwner() + "\t");
		System.out.println(dto.getBalance() + "\t");
		System.out.println("입금액 : ");
		int money = Integer.parseInt(scanner.nextLine());
		Request request = new Request();
		request.setAccountNo(dto.getAccountNo());
		request.setBalance(money);
	}
}
